{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make all",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "base": "$gcc"
    }, 
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make clean",
      "group": "build",
      "problemMatcher": {
        "base": "$gcc"
    },
    },
    {
      "label": "Rebuild",
      "type": "shell",
      "command": "make rebuild",
      "group": "build",
      "problemMatcher": {
        "base": "$gcc"
    },
    },
  ]
}